{
  "name": "Google+ Themer",
  "version": "1.0",
  "description": "Applies a different theme to Google+.",
  "background_page": "background.html",
  "page_action": {
    "default_icon": "icon.png", 
    "default_title": "Google+ Theme in place.",
    "default_popup": "popup.html"  
  },
  "content_scripts": [
    {
      "matches": ["*://plus.google.com/*"],
      "css": ["plustheme.css"]
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
